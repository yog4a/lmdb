{
  "name": "@yog4a/lmdb",
  "description": "Personal encapsulation module for lmdb",
  "version": "0.4.0",
  "author": "Yog4a",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "tsup",
    "prepack": "tsup",
    "build": "tsup",
    "test": "node --import tsx --test",
    "tags": "git push --follow-tags",
    "build:patch": "npm version patch && npm run build",
    "build:minor": "npm version minor && npm run build",
    "build:major": "npm version major && npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "update:check": "npx npm-check-updates -u",
    "update:install": "npm install"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "lmdb": "^3.5.1"
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.cjs",
      "default": "./dist/core.mjs"
    },
    "./modules": {
      "types": "./dist/modules.d.ts",
      "import": "./dist/modules.mjs",
      "require": "./dist/modules.cjs",
      "default": "./dist/modules.mjs"
    }
  }
}
