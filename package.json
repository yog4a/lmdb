{
  "name": "@yog4a/lmdb",
  "description": "Personal encapsulation module for lmdb",
  "version": "0.4.0",
  "author": "Yog4a",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yog4a/lmdb.git"
  },
  "bugs": {
    "url": "https://github.com/yog4a/lmdb/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "lmdb",
    "database",
    "store",
    "manager",
    "partition",
    "manager"
  ],
  "scripts": {
    "prepare": "tsup",
    "build": "tsup",
    "test": "node --import tsx --test",
    "release": "git push --follow-tags",
    "version:patch": "pnpm version patch",
    "version:minor": "pnpm version minor",
    "version:major": "pnpm version major",
    "build:patch": "pnpm version patch && pnpm build",
    "build:minor": "pnpm version minor && pnpm build",
    "build:major": "pnpm version major && pnpm build",
    "update": "pnpm up --latest",
    "publish:npm": "pnpm publish --registry https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "lmdb": "^3.5.1"
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs",
      "default": "./dist/core.js"
    },
    "./modules": {
      "types": "./dist/modules.d.ts",
      "import": "./dist/modules.js",
      "require": "./dist/modules.cjs",
      "default": "./dist/modules.js"
    }
  }
}
