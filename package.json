{
  "name": "@yog4a/lmdb",
  "description": "Personal encapsulation module for lmdb",
  "version": "0.9.2",
  "author": "Yog4a",
  "type": "module",
  "scripts": {
    "prepare": "tsup",
    "prepack": "tsup",
    "test": "node --import tsx tests/test.ts",
    "tags": "git push --follow-tags",
    "build": "tsup",
    "build:patch": "npm version patch && npm run build",
    "build:minor": "npm version minor && npm run build",
    "build:major": "npm version major && npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "update:check": "npx npm-check-updates",
    "update:install": "npm install"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "lmdb": "^3.5.1"
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./modules": {
      "types": "./dist/modules.d.ts",
      "import": "./dist/modules.mjs",
      "require": "./dist/modules.cjs"
    },
    "./plugins": {
      "types": "./dist/plugins.d.ts",
      "import": "./dist/plugins.mjs",
      "require": "./dist/plugins.cjs"
    }
  }
}
